<div id="container">
<div class="form"
<h3>ADD NEW POST</h3>

<br>
<br>

<%= form_with model: @post, url:user_posts_path do |form| %>
  <div class="form-cont">
    <div class="form-field">
    <%= form.label :title, :class => 'form-title' %> 
    <%= form.text_field :title, :class=>'form-text-field' %>
    <br>
  
    <%= form.label :text, :class => 'form-text' %>
    <%= form.text_area :text, required: true, :class => 'form-text-area' %>
    </div>
<br>
    <%= form.submit "Add post" %>
  </div>
<% end %>
</div>
</div>